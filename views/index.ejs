<!DOCTYPE html>
<html>

  <head>
    <title>TDK:The Dragons Kitchen</title>
    <%- include('partials/head.ejs')%>
  </head>
    
  <body>

    <header>
      <div class="header-content">
        <img src="../assets/logos/right/tdk_logo_right_250.png">

      </div>
      <h1 class="header-title">The Dragons Kitchen</h1>
    </header>
    
    <main>
      <section class="nav-bar">
        <%- include('partials/header.ejs') %>
      </section>

      <div id="searchbar">
        <form action="/searchRecipies" method="POST">
          <feildset>
            <label for="search-recipes">Hunt for Recipies:</label>
            <input type="text" id="search-recipes" name="content" placeholder="Search for a Recipe" default="lamb"></input>
            <label for="search-select">Hunt by:</label>
              <select name="type" id="search-select" placeholder="Select a type">
                <option value="query">Recipe</option>
                <option value="cuisine">Cuisine</option>
              </select>
            <label for="result-count">Return with:</label>
            <input type="number" id="result-count" name="count" default="2" min="2" max="25">

            </feildset>
            <button type="submit">search</button>
          </form>
      </div>

      <section class="first-row"> 
        <div class="slideshow-container">
          <div class="homeSlide fade">
            <h6 class="slide-count">1 / 3</h6>
            <img class="slide-image" src="../img/test1.jpg" style="width:100%">
            <h6 class="slide-caption">Caption goes here</h6>
          </div>
          <div class="homeSlide fade">
            <h6 class="slide-count">2 / 3</h6>
            <img class="slide-image" src="../img/test2.jpg" style="width:100%">
            <h6 class="slide-caption">Caption goes here</h6>
          </div>
          <div class="homeSlide fade">
            <h6 class="slide-count">3 / 3</h6>
            <img class="slide-image" src="../img/test3.jpg" style="width:100%">
            <h6 class="slide-caption">Caption goes here</h6>
          </div>
          <!-- Next and previous buttons -->
          <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
          <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>

        <div style="text-align:center">
          <span class="dot" onclick="currentSlide(1)"></span>
          <span class="dot" onclick="currentSlide(2)"></span>
          <span class="dot" onclick="currentSlide(3)"></span>
        </div>

        <!-- linked btn to create account page -->
        <div>
          <a href="/join"><button>Come Join The Dragons In the Kitchen</button></a>
        </div>
      </section>
      <section class="second-row">
        <%- include('partials/recomended.ejs') %>
      </section>

      <footer>
      <!-- make sticky -->
        <%- include('partials/navigation.ejs') %>
      </footer>

    </main>
    <script src="../js/slideshow.js"></script>
    <script src="../js/nav.js"></script>
  </body>
</html>