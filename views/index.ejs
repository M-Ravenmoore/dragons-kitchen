<!DOCTYPE html>
<html>

  <head>
    <title>TDK:The Dragons Kitchen</title>
    <%- include('partials/head.ejs')%>
  </head>
    
  <body>

    <header>
      <div class="user-menu">
        <a href=""><i class="fas fa-user-circle"></i></a> 
      </div>
      <article>
        <h1>TDK: The Dragons Kitchen</h1>
      </article>
      <div class="navigation-menu">
        <a href=""><i class="fas fa-bars"></i></a>
      </div>
    </header>

    <main>
      <div id="searchbar">
        <form>
          <feildset>
            <input type="text" id="search-recipes" name="search-recipes" placeholder="Search for a Recipe"></input>
            <button id="search" type="submit">search</button>
          </feildset>
          </form>
      </div>

      <section class="first-row">
        <div class="slideshow-container">
          <div class="homeSlide fade">
            <h6 class="slide-count">1 / 3</h6>
            <img class="slide-image" src="../img/test1.jpg" style="width:100%">
            <h6 class="slide-caption">Caption goes here</h6>
          </div>
          <div class="homeSlide fade">
            <h6 class="slide-count">2 / 3</h6>
            <img class="slide-image" src="../img/test2.jpg" style="width:100%">
            <h6 class="slide-caption">Caption goes here</h6>
          </div>
          <div class="homeSlide fade">
            <h6 class="slide-count">3 / 3</h6>
            <img class="slide-image" src="../img/test3.jpg" style="width:100%">
            <h6 class="slide-caption">Caption goes here</h6>
          </div>
          <!-- Next and previous buttons -->
          <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
          <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>

        <div style="text-align:center">
          <span class="dot" onclick="currentSlide(1)"></span>
          <span class="dot" onclick="currentSlide(2)"></span>
          <span class="dot" onclick="currentSlide(3)"></span>
        </div>

        <!-- linked btn to create account page -->
        <div>
          <button>Come Join The Dragons In the Kitchen</button>
        </div>
      </section>
      <section class="second-row">
        <%- include('partials/recomended.ejs') %>
      </section>

      <footer>
      <!-- make sticky -->
      <%- include('partials/navigation.ejs') %>
      </footer>

    </main>
    <script src="../js/slideshow.js"></script>
  </body>
</html>