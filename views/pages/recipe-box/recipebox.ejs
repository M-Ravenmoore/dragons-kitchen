<!DOCTYPE html>
<html>
  <head>
    <title>TDK:Your Recipies</title>
    <%- include('../../partials/head.ejs')%>
  </head>
  <body>
    <header class="header">
        <%- include('../../partials/header.ejs') %>
    </header>
    <div class="top-push"></div>
    <div class="content">
      <main>
        <section class="buttons">
          <a href="/newRecipe"><button>Create Recipe</button></a>
        </section>
        <section class="recipebox-list">
          <% savedRecipesList.forEach(result =>{ %>
            <div class="result-card">
              <div class="result-card-header">
                <img class="result-icon" src="../../assets/icons/day/myrecipe_scroll_daymode.png">
                <h4 class="result-name"><%= result.title %></h4>
              </div>
              <div class="result-card-info">
                <img class="result-image" src="<%= result.image %>">
                <article class="card-info">
                  <ul>
                    <li>vegitarian:</li>
                    <li>vegan:</li>
                    <li>servings:</li>
                  </ul>

                  <a class="card-info-btn" href="/recipeBox/<%= result.id %>"><button id="result-details">Inspect Recipe Details</button></a>
                </article>
              </div>
            </div>
          <% }) %>
        </section>
      </main>
    </div>
    <div class="push"></div>
    <footer>
      <div class="footer-box">
        <%- include('../../partials/navigation.ejs') %>
      </div>
    </footer>
    <script src="../../js/nav.js"></script>
  </body>
</html>