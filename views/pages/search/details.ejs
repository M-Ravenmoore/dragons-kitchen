<!DOCTYPE html>
<html>
  <head>
    <title>TDK:Result Details</title>
    <%- include('../../partials/head.ejs') %>
  </head>

  <body>
    <header class="header">
      <%- include('../../partials/header.ejs') %>
    </header>
    <div class="top-push"></div>
    <div class="content">
      <main>
        <%- include('../../partials/recipe-card.ejs') %>
        <div id="recipe-save-form">
          <form action="/recipeBox" method="POST">
            <fieldset>
              <input type="hidden" name="spoon_id" value="<%= recipe.spoon_id %>"></input>
              <input type="hidden" name="image" value=<%= recipe.image %> ></input>
              <input type="hidden" name="title" value="<%= recipe.title %>"></input>
              <input type="hidden" name="servings" value="<%= recipe.servings %>"></input>
              <input type="hidden" name="cook_time" value="<%= recipe.time %>"></input>
              <input type="hidden" name="vegetarian" value="<%= recipe.vegetarian %>"></input>
              <input type="hidden" name="vegan" value="<%= recipe.vegan %>"></input>
              <input type="hidden" name="source_url" value="<%= recipe.sourceUrl %>"></input>
              <input type="hidden" name="source_name" value="<%= recipe.source_name %>"></input>
              <ol>
                <li>
                  <% recipe.ingredients_name.forEach(ingredient =>{ %>
                  <input type="hidden" name="ingredients_name" value="<%= ingredient %>"></input>
                  <% }) %>
                  <% recipe.ingredients_unit.forEach(unit =>{ %>
                  <input type="hidden" name="ingredients_unit" value="<%= unit %>"></input>
                  <% }) %>
                  <% recipe.ingredients_amount.forEach(amount =>{ %>
                  <input type="hidden" name="ingredients_amount" value="<%= amount %>"></input>
                  <% }) %>
                  <% recipe.ingredients_string.forEach(string =>{ %>
                    <input type="hidden" name="ingredients_string" value="<%= string %>"></input>
                    <% }) %>
                </li>
              </ol>
              <input type="hidden" name="instructions" value="<%= recipe.instructions %>"></input>
            </fieldset>
            <input type="submit" value="Save this recipe">
          </form>
        </div>
      </section>
    </main>
    </div>
    <div class="push"></div>
    <footer>
      <div class="footer-box">
        <%- include('../../partials/navigation.ejs') %>
      </div>
    </footer>

    <script src="../../js/nav.js"></script>
  </body>
</html>