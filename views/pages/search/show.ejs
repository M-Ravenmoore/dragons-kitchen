<!DOCTYPE html>
<html>
  <head>
    <title>TDK:The Dragons Kitchen</title>
    <%- include('../../partials/head.ejs')%>
  </head>
  <body>
    <header class="header">
      <div class="header-content">
        <img class="logo" src="../assets/logos/right/tdk_logo_right_250.png">
        <h1 class="header-title">The Dragons Kitchen</h1>
      </div>
      <div class="nav-bar">
        <%- include('../../partials/header.ejs') %>
      </div>
    </header>
    <div class="top-push"></div>
  <div class="content">
      <main>
      <section class="api-results">
        <% resultItems.forEach(result =>{ %>
          <div class="card">
            <h3 class="recipe-name">Dish Name:<%= result.title %></h3>
            <img class="recipe-image" src="<%= result.image %>">
            <a href="/recipeDetails/:<%= result.spoon_id %>"><button>Inspect Recipe</button></a>
          </div>
        <% }) %>
      </section>

    </main>
  </div>
  <div class="push"></div>
  <footer>
    <div class="footer-box">
      <%- include('../../partials/navigation.ejs') %>
    </div>
  </footer>

    <script src="../../js/nav.js"></script>
  </body>
</html>